<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:support="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/divider">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/plusIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add"
                android:padding="5dp"
                android:scaleType="center"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/expenseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gray"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date"
                android:tint="@color/secondary_text_default_material_light"/>

            <TextView
                android:id="@+id/balanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DB"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 5"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/entryCount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="55.50"
                android:textSize="20sp"
                android:layout_marginRight="5dp"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/infoPanel"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pullDownText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:textSize="20sp"
                    android:text="Pull down to add a transaction"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:id="@+id/downChevronIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pullDownText"
                    android:src="@drawable/ic_down_arrow"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/black"/>
            </RelativeLayout>

            <com.baoyz.swipemenulistview.SwipeMenuListView
                android:id="@+id/transactionListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/gray"
                android:dividerHeight="1dp"
                android:visibility="visible"/>
        </LinearLayout>
        </LinearLayout>

    <com.p_v.flexiblecalendar.FlexibleCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        support:monthDayVerticalSpacing="0dp"
        support:startDayOfTheWeek="SUNDAY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/calendarView"
        android:background="@color/colorPrimary"/>
 </RelativeLayout>