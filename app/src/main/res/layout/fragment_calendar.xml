<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:support="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

     <com.p_v.flexiblecalendar.FlexibleCalendarView
         android:id="@+id/calendarView"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         support:monthDayVerticalSpacing="0dp"
         support:startDayOfTheWeek="SUNDAY"/>

    <LinearLayout
        android:id="@+id/centerPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/day_focus"
        android:padding="5dp">

        <ImageView
            android:id="@+id/dateIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_ic_date" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 5"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/totalCostForDay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="55.50"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:gravity="right" />
    </LinearLayout>

    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/rotate_header_list_view_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/transactionListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/gray"
                android:dividerHeight="1dp"
                android:visibility="visible" />

            <include layout="@layout/empty_transaction_indicator"
                android:id="@+id/emptyTransactionLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>
    </in.srain.cube.views.ptr.PtrFrameLayout>
</LinearLayout>