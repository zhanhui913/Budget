<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemPaddingStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhan.library.CircularView
        android:id="@+id/openSourceIcon"
        style="@style/CircularViewStyle_unselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/openSourceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/openSourceIcon"
        android:paddingLeft="16dp"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/openSourceAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/openSourceIcon"
        android:paddingLeft="16dp"
        android:layout_below="@+id/openSourceName"
        android:text="Author"
        android:textSize="15sp" />
</RelativeLayout>