<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhan.budget.Fragment.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView style="@style/SettingsTextViewHeaderStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="GENERAL" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView style="@style/SettingsTextViewButtonStyle"
            android:id="@+id/firstDayBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="First day of the week"/>

        <TextView style="@style/SettingsTextViewHeaderStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="DATA"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView style="@style/SettingsTextViewButtonStyle"
            android:id="@+id/backupBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Backup data"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <TextView style="@style/SettingsTextViewButtonStyle"
            android:id="@+id/resetDataBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Reset data"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <TextView style="@style/SettingsTextViewButtonStyle"
            android:id="@+id/exportCSVBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Export data in CSV"/>

        <TextView style="@style/SettingsTextViewHeaderStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="FEEDBACK"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView style="@style/SettingsTextViewButtonStyle"
            android:id="@+id/emailBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Email me"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <TextView style="@style/SettingsTextViewButtonStyle"
            android:id="@+id/tourBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tour"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <TextView style="@style/SettingsTextViewButtonStyle"
            android:id="@+id/faqBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="FAQ"/>

        <TextView
            android:id="@+id/appVersionTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="v1.0.0"
            android:layout_margin="10dp"
            android:gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>