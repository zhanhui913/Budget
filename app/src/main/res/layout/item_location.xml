<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/locationPanel"
        style="@style/ItemPaddingStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/themeColorBtn"
        android:clickable="true">

        <com.zhan.library.CircularView
            android:id="@+id/locationIcon"
            style="@style/CircularViewStyle_unselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/locationIcon"
            android:paddingLeft="16dp"
            android:text="Location"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/locationAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationName"
            android:layout_toRightOf="@+id/locationIcon"
            android:paddingLeft="16dp"
            android:text="5 times"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>