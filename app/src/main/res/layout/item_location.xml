<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/locationPanel"
	style="@style/ItemPaddingStyle"
	android:background="?attr/themeColorBtn"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<com.zhan.library.CircularView
		android:id="@+id/locationIcon"
		style="@style/CircularViewStyle_unselected"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/item_left_padding"
		android:layout_toRightOf="@+id/locationIcon"
		android:orientation="vertical"
		android:layout_centerVertical="true">

		<TextView
			android:id="@+id/locationName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Location"
			android:textSize="@dimen/text_title_size"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/locationAmount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="5 times"
			android:textSize="@dimen/text_content_size"/>
	</LinearLayout>
</RelativeLayout>