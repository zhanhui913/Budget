<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView style="@style/AlertDialogTitleStyle"
            android:id="@+id/alertdialogMonthTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jan 2016" />
    </LinearLayout>

    <com.p_v.flexiblecalendar.FlexibleCalendarView
        xmlns:flexible="http://schemas.android.com/apk/res-auto"
        android:id="@+id/alertdialogCalendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/item_padding"
        android:paddingRight="@dimen/item_padding"
        android:paddingBottom="@dimen/item_padding"
        flexible:disableAutoDateSelection="true"/>
</LinearLayout>