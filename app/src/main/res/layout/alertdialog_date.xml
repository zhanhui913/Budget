<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/AlertDialogStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/alertdialog_base"/>

    <com.p_v.flexiblecalendar.FlexibleCalendarView
        xmlns:flexible="http://schemas.android.com/apk/res-auto"
        android:id="@+id/alertdialogCalendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dialog_content_top_padding"
        flexible:disableAutoDateSelection="true"/>
</LinearLayout>