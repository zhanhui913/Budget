<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

    <TextView style="@style/AlertDialogTitleStyle"
        android:id="@+id/numberPadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NumberPad Title" />
    </LinearLayout>
    <TextView
        android:id="@+id/numericTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-$0.00"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="end"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/themeColorHighlight"
        android:layout_margin="15dp">

        <include layout="@layout/number_pad"
            android:id="@+id/numberPad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>