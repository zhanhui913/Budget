<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/themeColorHighlight"
    android:padding="5dp">

    <ImageView
        android:id="@+id/dateIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/svg_ic_date"
        android:tint="?attr/themeColorText"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dec 2016"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/dateIcon" />

    <TextView
        android:id="@+id/totalCostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="$0.00"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/dateTextView"
        android:gravity="right" />
</RelativeLayout>