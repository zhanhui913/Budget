<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/monthCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="?attr/themeColorHighlight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/themeColorBtn"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/leftPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/monthName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="January"
                android:layout_alignParentTop="true"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/monthTotalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55.5"
                android:layout_below="@+id/monthName"
                android:layout_alignParentLeft="true" />

            <fr.castorflex.android.circularprogressbar.CircularProgressBar
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/monthReportProgressBar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:indeterminate="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/monthName"
                app:cpb_color="@color/colorPrimary"
                app:cpb_rotation_speed="1.0"
                app:cpb_sweep_speed="1.0"
                app:cpb_stroke_width="2dp"
                app:cpb_min_sweep_angle="10"
                app:cpb_max_sweep_angle="300" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/leftPanel"
            android:layout_alignParentRight="true"
            android:gravity="right">

            <LinearLayout
                android:id="@+id/topContainer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/order1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1st"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal" />

                <com.zhan.library.CircularView style="@style/CircularViewStyle_unselected"
                    android:id="@+id/categoryIcon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/topContainer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/order2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2nd"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal" />

                <com.zhan.library.CircularView style="@style/CircularViewStyle_unselected"
                    android:id="@+id/categoryIcon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/topContainer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/order3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3rd"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal" />

                <com.zhan.library.CircularView style="@style/CircularViewStyle_unselected"
                    android:id="@+id/categoryIcon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>