<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/expenseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_ic_date"
            android:tint="@color/secondary_text_default_material_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Balance "
            android:textSize="20sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 5"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/entryCount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="55.50"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:gravity="right" />
    </LinearLayout>

    <com.zhan.circularview.CircularView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/categoryIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        custom:cv_strokeColor="@color/lightPurple"
        custom:cv_strokeWidth="10dp"
        custom:cv_strokePadding="0dp"
        custom:cv_iconColor="@color/red"
        custom:cv_iconDrawable="@drawable/food"
        custom:cv_iconTopPadding="20dp"
        custom:cv_iconBottomPadding="20dp"
        custom:cv_iconLeftPadding="20dp"
        custom:cv_iconRightPadding="20dp"
        custom:cv_bgRadius="100dp" />

</LinearLayout>