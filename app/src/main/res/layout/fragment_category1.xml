	<include layout="@layout/empty_content"
	         android:id="@+id/emptyCategoryLayout"
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:layout_below="@+id/topPanel"/> -->
</RelativeLayout>
