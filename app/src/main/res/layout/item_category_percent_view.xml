<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/budget_white_button">

    <com.zhan.library.CircularView style="@style/CircularViewStyle_unselected"
        android:id="@+id/categoryIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/categoryIcon"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/categoryCost"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categoryPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.55% "
            android:textSize="15sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/categoryCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$25.00"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>