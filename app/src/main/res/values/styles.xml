<resources>

    <!-- Light application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Dark application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--
    <style name="AppThemeDark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeDark.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
-->
    <!-- Other view's style -->
    <style name="NumberPadStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:textSize">@dimen/num_pad_text_size</item>
        <item name="android:background">@drawable/budget_white_button</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="CircularViewStyle_selected">
        <item name="cv_strokePadding">3dp</item>
        <item name="cv_strokeWidth">1dp</item>
        <item name="cv_strokeColor">@color/transparent</item>
        <item name="cv_iconTopPadding">12dp</item>
        <item name="cv_iconBottomPadding">12dp</item>
        <item name="cv_iconLeftPadding">12dp</item>
        <item name="cv_iconRightPadding">12dp</item>
        <item name="cv_bgRadius">25dp</item>
    </style>

    <style name="CircularViewStyle_unselected">
        <item name="cv_iconTopPadding">12dp</item>
        <item name="cv_iconBottomPadding">12dp</item>
        <item name="cv_iconLeftPadding">12dp</item>
        <item name="cv_iconRightPadding">12dp</item>
        <item name="cv_bgRadius">25dp</item>
    </style>

    <style name="SettingsTextViewButtonStyle">

        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsTextViewHeaderStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
