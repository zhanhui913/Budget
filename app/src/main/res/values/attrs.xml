<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleView">
        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeColor" format="color|reference"/>
        <attr name="fillColor" format="color|reference"/>
        <attr name="circleRadius" format="dimension"/>
        <attr name="circleGap" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LovelyView">
        <attr name="circleColor" format="color" />
        <attr name="circleLabel" format="string"></attr>
        <attr name="circleIcon" format="integer"></attr>
        <attr name="labelColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="PlusView">
        <attr name="pv_bgColor" format="color"/>
        <attr name="pv_iconDrawable" format="integer"/>
        <attr name="pv_iconColor" format="integer"/>
        <attr name="pv_iconSize" format="enum">
            <enum name="XSMALL" value="17"/>
            <enum name="SMALL" value="13"/>
            <enum name="MEDIUM" value="9"/>
            <enum name="LARGE" value="5"/>
            <enum name="XLARGE" value="1"/>
            <enum name="NONE" value="0"/>
        </attr>
    </declare-styleable>
</resources>