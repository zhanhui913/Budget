<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhan.budget">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeLight">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeLight.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.TransactionInfoActivity"
            android:label="@string/title_activity_transaction_info"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeLight.NoActionBar"
            android:windowSoftInputMode="stateUnspecified|adjustNothing" />
        <activity
            android:name=".Activity.CategoryInfoActivity"
            android:label="@string/title_activity_category_info"
            android:theme="@style/AppThemeLight.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing" />
        <activity
            android:name=".Activity.AccountInfoActivity"
            android:label="@string/title_activity_account_info"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.LocationInfoActivity"
            android:label="@string/title_activity_location_info"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.OverviewActivity"
            android:label="@string/title_activity_overview"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.Settings.SettingsCategory"
            android:label="@string/title_activity_settings_category"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.Settings.SettingsAccount"
            android:label="@string/title_activity_settings_account"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.Settings.SettingsLocation"
            android:label="@string/title_activity_settings_location"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.Transactions.TransactionsForLocation"
            android:label="@string/title_activity_transactions_for_location"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.Settings.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.Settings.OpenSourceActivity"
            android:label="@string/title_activity_open_source"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.Settings.TranslationActivity"
            android:label="@string/title_activity_translation"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.Transactions.TransactionsForCategory"
            android:label="@string/title_activity_transactions_for_category"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.Transactions.TransactionsForAccount"
            android:label="@string/title_activity_transactions_for_account"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.SelectCurrencyActivity"
            android:label="@string/title_activity_select_currency"
            android:theme="@style/AppThemeLight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".Activity.PdfActivity"
            android:label="@string/title_activity_pdf"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name="za.co.riggaroo.materialhelptutorial.tutorial.MaterialTutorialActivity"
            android:label="@string/title_activity_tour"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".Activity.Settings.DeveloperActivity"
            android:label="@string/title_activity_developer"
            android:theme="@style/AppThemeLight.NoActionBar"/>

    </application>
</manifest>